<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">@dimen/button_margin_overlap</item>
    </style>

    <style name="Tabbar">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TabButton">
        <item name="android:padding">10dp</item>
        <item name="android:tint">@color/secondaryText</item>
        <item name="android:layout_marginTop">@dimen/button_margin_overlap</item>
    </style>

    <style name="CategoryIcon">
        <item name="android:layout_height">@dimen/category_icon_size</item>
        <item name="android:layout_width">@dimen/category_icon_size</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="ProgressBar" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/colorPrimary</item>
        <item name="cpd_strokeSize">3dp</item>
        <item name="cpd_padding">6dp</item>
        <item name="cpd_rotateDuration">1500</item>
        <item name="cpd_inAnimDuration">@integer/map_progress_animation_duration</item>
        <item name="cpd_outAnimDuration">@integer/map_progress_animation_duration</item>
    </style>

    <style name="FilterIcon">
        <item name="android:layout_height">@dimen/category_icon_size</item>
        <item name="android:layout_width">@dimen/category_icon_size</item>
    </style>

    <style name="FilterIconRow">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="FilterCostButton">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cost_button</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/appGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterSectionHeader">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:layout_marginTop">10sp</item>


        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailIcon">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
    </style>

    <style name="DetailDescription">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
